<h3>スケジュール編集</h3>

<%= render "shared/error", obj: @post%> 

<%= form_with model:@post do |f| %>
<table>
 <tr>
   <th><%= f.label :title ,"タイトル" %></th>
   <td><%= f.text_field :title %></td>
 </tr>

 <tr>
  <th><%= f.label :start ,"開始日" %></th>
  <td><%= f.date_field :start %></td>
 </tr>

 <tr>
  <th><%= f.label :finish ,"終了日" %></th>
  <td><%= f.date_field :finish %></td>
 </tr>

 <tr>
  <th><%= f.label :allday ,"終日" %></th>
  <td>
  <%= f.check_box :allday %>
  <p>終日の場合はチェックを入れて下さい</p>
  </td>
 </tr>

 <tr>
  <th><%= f.label :memo ,"スケジュールメモ" %></th>
  <td><%= f.text_area :memo %></td>
 </tr>
</table>

 <div>
    <ul>
      <li><%= f.submit "スケジュール内容の編集を完了する" %></li>
      <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>

